<% if (site.posts.length){ %>
  <div class="widget-wrap">
    <h5 class="widget-title"><%= __('recent_posts') %></h5>
    <div class="widget">
      <ul>
        <% site.posts.sort('date', -1).limit(6).each(function(post){ %>
          <li>
            <a href="javascript:void(0)" onclick="show('<%- url_for(post.path) %>')"><%= post.title || '(no title)' %></a>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
<% } %>
